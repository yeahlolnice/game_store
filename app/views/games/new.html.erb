<h1>Submit a game you have created!</h1>

<%= form_with model: @game, local: true do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>
    <div>
        <%= f.label :price %> $:
        <%= f.number_field :price, min: 0, step: 0.01%>      
    </div>
    <div class="field">
        <%= f.label :picture %><br />
        <%= f.file_field :picture, accept: 'image/jpeg, image/png, image/jpg' %>
    </div>
    <div class="field">
        <%= f.label :game_folder %>     
        <%= f.file_field :game_folder, accept: 'application/zip' %>
    </div>
    <!-- <div>
        <%# f.label :menus %>
        <%# f.collection_check_boxes :menu_ids, @menus, :id, :title %>
    </div> -->
    <div>
        <%= f.submit "Submit" %>
    </div>
<% end %>

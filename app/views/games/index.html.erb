<div class="hero-image">
    <h1>Welcome to Balance Games</h1>
</div>
<% @games.each do |game| %>
    <div>
        <h1><%=link_to game.title, game_path(game.id) %></h1>
        <% if game.picture.attached? %>
            <%= image_tag game.picture, class: "game-pic" %>
        <% end %>
    </div>
<% end %>   

<%= link_to "Submit Your Games Here!", new_game_path %>
<%= form_with model: @review, local: true do |f| %>
        <div>
            <%= f.label :title %>
            <%= f.text_field :title %>
        </div>
        <div>
            <%= f.label :content %>
            <%= f.text_area :content %>
        </div>
        <div>
            <%= f.label :rating %>
            <%= f.number_field :rating, min: 0, max: 5, step: 0.50 %>
        </div>
        <div>
            <%= f.submit "Edit Review" %>
            <h3><%= link_to 'Delete', review_path(@review.id), method: :delete, data: { confirm: "Are you really realy sure??" } %></h3>

        </div>
    <% end %> 


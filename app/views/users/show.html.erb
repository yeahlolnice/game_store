<h1>Welcome to <%= @user.username %>'s profile</h1>
<div class="pp">
    <%= image_tag @user.picture if @user.picture.attached? %>
</div>
<p>Description:</p>
<p><%= @user.bio %></p> 
<p><%= @user.email %></p>
<% if current_user.id == @user.id or current_user.has_role? :admin %>
    <%= link_to "Edit Profile", edit_user_registration_path(@user) %>
<% end %>
<% @games.each do |game| %>
    <div>
        <%= game.title %>
        <%= game.description %>   
    </div>
<% end %>
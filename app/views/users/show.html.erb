<h1>Welcome to <%= @user.username %>'s profile</h1>
<div>
    <%= image_tag @user.picture if @user.picture.attached? %>
</div>
<p>Description:</p>
<p><%= @user.bio %></p> 
<p><%= @user.email %></p>
<% if user_signed_in? %>
    <% if current_user.id == @user.id or current_user.has_role? :admin %>
        <%= link_to "Edit Profile", edit_user_registration_path(@user) %>
    <% end %>
<% end %>
<% @games.each do |game| %>
    <div>
        <h1><%=link_to game.title, game_path(game.id) %></h1>
        <div>
            <%= image_tag game.picture, class: 'game-pic' if game.picture.attached? %>
        </div>
    </div>
<% end %>